<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".boton4.SeleccionImagen">

    <Button
        android:id="@+id/btnFerrari"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Ferrari F40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fragmentCoche"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMazda"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:text="Madza 787"
        app:layout_constraintStart_toEndOf="@+id/fragmentCoche"
        app:layout_constraintTop_toBottomOf="@+id/btnFerrari" />

    <Button
        android:id="@+id/btnRUF"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:text="RUF Yellow Bird"
        app:layout_constraintStart_toEndOf="@+id/btnMazda"
        app:layout_constraintTop_toBottomOf="@+id/btnMclaren" />

    <Button
        android:id="@+id/btnMclaren"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:text="Mclaren F1"
        app:layout_constraintStart_toEndOf="@+id/btnFerrari"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragmentCoche"
        android:layout_width="294dp"
        android:layout_height="261dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>